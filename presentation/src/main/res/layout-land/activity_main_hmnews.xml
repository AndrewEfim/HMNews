<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.con/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.andreii.mysuperarchitecturealbum.presentation.screen.AlbumViewModel">
        </variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#080000"
        android:layout_weight="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="#e77373"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_News_hmnews"
                android:background="@color/buttonBackground"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonNews"
                />
            <Button
                android:id="@+id/button_Bands_hmnews"
                android:background="@color/buttonBackground"
                android:layout_weight="1"
                android:text="@string/buttonBands"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </LinearLayout>
        </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/heavy_metal_news_v1" />
    </LinearLayout>
</layout>